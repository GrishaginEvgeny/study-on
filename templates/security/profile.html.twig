{% extends 'base.html.twig' %}

{% block title %}Ваш профиль / StudyOn{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center" style="margin-top: 20%;">

        <div class="card p-3" style="background: #eee;">
            <div class="user-info mb-3 d-flex align-items-center">
                <div class="person rounded-circle border border-dark border-3" style="height: 50px; width: 50px; background: var(--bs-dark);margin-right: 15px">
                    <svg color="#eee" xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
                    </svg>
                </div>
                <div>
                    <h2 class="text-dark mb-0">{{ email }}</h2>
                    <small class="text-muted">{% if 'ROLE_SUPER_ADMIN' in roles %} Администратор {% else %} Пользователь {% endif %}</small>
                </div>
            </div>
            <div class="balance d-flex align-items-center">
                <div class="wallet mx-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-wallet2" viewBox="0 0 16 16">
                        <path d="M12.136.326A1.5 1.5 0 0 1 14 1.78V3h.5A1.5 1.5 0 0 1 16 4.5v9a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 13.5v-9a1.5 1.5 0 0 1 1.432-1.499L12.136.326zM5.562 3H13V1.78a.5.5 0 0 0-.621-.484L5.562 3zM1.5 4a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-13z"/>
                    </svg>
                </div>
                <h3 class="text-dark"> {{ balance }} $</h3>
            </div>
            <div class="text-center mb-1">
                <a href="{{ path('app_transactions') }}" class="btn btn-lg btn-dark transaction-link">
                    Транзакции
                </a>
            </div>
            <div class="text-center">
                <a href="{{ path('app_logout') }}" class="btn btn-lg btn-dark logout-link">
                    Выйти
                </a>
            </div>
        </div>
    </div>
{% endblock %}
