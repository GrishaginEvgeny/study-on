{% extends 'base.html.twig' %}

{% block title %}{{ course.Name }}{% endblock %}

{% block body %}
    <h1>{{ course.Name }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ course.Description }}</td>
            </tr>
            <tr>
                    <th>Lessons</th>


                    {% for lesson in course.lessons %}
                    <tr>
                        <td>{{ lesson.SequenceNumber }}</td>
                        <td><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.Name }}</a></td>
                        <td><a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a></td>
                        <td><a href="{{ path('app_lesson_delete', {'id': lesson.id}) }}">delete</a></td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    <a href="{{ path('app_lesson_new', {'id': course.id}) }}">add lesson</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
