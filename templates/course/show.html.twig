{% extends 'base.html.twig' %}

{% block title %}{{ course.Name }} / StudyOn{% endblock %}

{% block body %}
    <h1>{{ course.Name }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Описание</th>
                <td>{{ course.Description }}</td>
            </tr>
            <tr>
                    {% if course.lessons|length > 0 %}
                    <th>Уроки данного курса</th>
                    {% else %}
                    {% endif %}

                    {% for lesson in course.lessons %}
                    <tr>
                        <td>{{ lesson.SequenceNumber }}</td>
                        <td><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.Name }}</a></td>
                        <td><a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать урок</a></td>
                        <td><a href="{{ path('app_lesson_delete', {'id': lesson.id}) }}">Удалить урок</a></td>
                    </tr>
                    {% else %}
                    {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">Вернуться к курсам</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>

    <a href="{{ path('app_lesson_new', {'id': course.id}) }}">Добавить урок</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
