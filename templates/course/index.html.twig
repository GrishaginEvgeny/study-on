{% extends 'base.html.twig' %}

{% block title %}Курсы / StudyOn{% endblock %}

{% block body %}
    <h1>StudyOn</h1>

    <table class="table">
        <thead>
            <tr>
                {% if courses|length > 0 %}
                <th>Название курса</th>
                <th>Описание курса</th>
                {% else %}
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.Name }}</a>
                </td>
                <td>{{ course.Description }}</td>
            </tr>
        {% else %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_new') }}">Создать новый курс</a>
{% endblock %}
