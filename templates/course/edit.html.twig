{% extends 'base.html.twig' %}

{% block title %}Редактировать курс {{ course.Name }} / StudyOn {% endblock %}
{% block body %}
    <h1>Редактирование курса "{{ course.Name }}"</h1>

    {% for message in app.flashes('notification') %}
        <div class="alert alert-dark alert-dismissible fade show notification-message">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {{ include('course/_form.html.twig', {'button_label': 'Обновить'}) }}

    <a href="{{ path('app_course_index') }}" type="button" class="btn btn-dark my-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"></path>
        </svg>
        Вернуться к курсам
    </a>

    <a href="{{ path('app_course_show',{'id': course.id}) }}" type="button" class="btn btn-dark mb-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"></path>
        </svg>
        Вернуться к редактируемому курсу
    </a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
