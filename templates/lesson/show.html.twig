{% extends 'base.html.twig' %}

{% block title %}{{ lesson.Name }} / {{ lesson.Course.Name }} / StudyOn{% endblock %}

{% block body %}
    <h1 class="lesson-header">{{ lesson.Course.Name }} / {{lesson.Name}}</h1>
    <p>{{ lesson.Content }}</p>

    <a href="{{ path('app_course_show',{'id': lesson.Course.id}) }}" type="button" class="btn btn-dark my-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"></path>
        </svg>
        Вернуться к курсу
    </a>


    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-dark my-1" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"></path>
            </svg>
            Редактировать урок
        </a>

        {{ include('lesson/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
