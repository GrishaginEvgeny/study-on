{% extends 'base.html.twig' %}

{% block title %}Lesson index{% endblock %}

{% block body %}
    <h1>Lesson index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Название урока</th>
                <th>Порядковый номер</th>
                <th>Содержание урока</th>
            </tr>
        </thead>
        <tbody>
        {% for lesson in lessons %}
            <tr>
                <td>{{ lesson.id }}</td>
                <td>{{ lesson.Name }}</td>
                <td>{{ lesson.SequenceNumber }}</td>
                <td>{{ lesson.Content }}</td>
                <td>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Перейти к уроку</a>
                    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lesson_new') }}">Создать новый урок</a>
{% endblock %}
